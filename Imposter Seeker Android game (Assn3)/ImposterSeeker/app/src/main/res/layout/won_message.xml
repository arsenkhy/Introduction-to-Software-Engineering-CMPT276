<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backG"
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_below="@+id/scoreNum"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/background" />

    <ImageView
        android:id="@+id/deadBody"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignTop="@+id/backG"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/dead" />

    <TextView
        android:id="@+id/messageDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font1"
        android:textColor="#000000"
        android:text="You have found all imposters"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/scoreNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messageDialog"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font1"
        android:textColor="#000000"
        android:layout_marginTop="11dp"
        android:text="Congratulations!"
        android:textSize="18sp" />

</RelativeLayout>